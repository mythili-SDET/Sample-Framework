<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Automation Master Suite" parallel="tests" thread-count="2">
    
    <parameter name="browser" value="${browser}" />
    
    <test name="UI Tests" enabled="true">
        <groups>
            <run>
                <include name="ui"/>
            </run>
        </groups>
        <packages>
            <package name="com.example.tests.ui"/>
        </packages>
    </test>

    <test name="API Tests" enabled="true">
        <groups>
            <run>
                <include name="api"/>
            </run>
        </groups>
        <packages>
            <package name="com.example.tests.api"/>
        </packages>
    </test>

    <test name="DB Tests" enabled="true">
        <groups>
            <run>
                <include name="db"/>
            </run>
        </groups>
        <packages>
            <package name="com.example.tests.db"/>
        </packages>
    </test>

</suite>